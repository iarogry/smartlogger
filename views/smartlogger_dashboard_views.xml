<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Форма для дашборду -->
    <record id="smartlogger_dashboard_view_form" model="ir.ui.view">
        <field name="name">smartlogger.dashboard.form</field>
        <field name="model">smartlogger.dashboard</field>
        <field name="arch" type="xml">
            <form string="Дашборд SmartLogger" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Дашборд SmartLogger</h1>
                        <p class="text-muted">Загальний огляд всіх станцій</p>
                    </div>
                    <group>
                        <group string="Загальна статистика">
                            <field name="total_stations"/>
                            <field name="total_capacity"/>
                        </group>
                        <group string="Поточні показники">
                            <field name="current_total_power"/>
                            <field name="daily_total_energy"/>
                        </group>
                    </group>

                    <separator string="Швидкі дії"/>
                    <div class="oe_button_box">
                        <button name="%(action_smartlogger_station)d"
                                type="action"
                                string="Переглянути станції"
                                class="btn-primary"/>
                        <button name="%(action_sync_data_wizard)d"
                                type="action"
                                string="Синхронізувати дані"
                                class="btn-secondary"/>
                    </div>

                    <div class="alert alert-info mt-3">
                        <p><strong>Примітка:</strong> Цей дашборд відображає агреговані дані всіх станцій SmartLogger.</p>
                        <p>Для детального аналізу скористайтеся окремими розділами станцій та історичних даних.</p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>