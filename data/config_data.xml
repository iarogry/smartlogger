<?xml version="1.0" encoding="utf-8"?>
<!-- ФАЙЛ: data/config_data.xml -->
<!-- ЗАМЕНИТЬ ПОЛНОСТЬЮ существующий файл -->

<odoo>
    <data noupdate="1">
        <!-- Основные параметры конфигурации Huawei FusionSolar API -->

        <record id="config_fusionsolar_base_url" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.base_url</field>
            <field name="value">https://eu5.fusionsolar.huawei.com/thirdData</field>
        </record>

        <record id="config_fusionsolar_username" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.username</field>
            <field name="value"></field> <!-- Пустое значение для заполнения пользователем -->
        </record>

        <record id="config_fusionsolar_password" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.password</field>
            <field name="value"></field> <!-- Пустое значение для заполнения пользователем -->
        </record>

        <!-- Новые параметры для множественных станций -->

        <record id="config_fusionsolar_batch_size" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.batch_size</field>
            <field name="value">20</field>
        </record>

        <record id="config_fusionsolar_request_delay" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.request_delay</field>
            <field name="value">1.0</field>
        </record>

        <record id="config_fusionsolar_max_retries" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.max_retries</field>
            <field name="value">3</field>
        </record>

        <record id="config_fusionsolar_timeout" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.timeout</field>
            <field name="value">30</field>
        </record>

        <record id="config_fusionsolar_data_retention_days" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.data_retention_days</field>
            <field name="value">90</field>
        </record>

        <record id="config_fusionsolar_enable_batch_processing" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.enable_batch_processing</field>
            <field name="value">true</field>
        </record>

        <record id="config_fusionsolar_use_legacy_api" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.use_legacy_api</field>
            <field name="value">false</field>
        </record>

        <record id="config_fusionsolar_log_level" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.log_level</field>
            <field name="value">INFO</field>
        </record>

        <!-- Параметри захисту від блокування API -->

        <record id="config_fusionsolar_api_blocked" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.api_blocked</field>
            <field name="value">false</field>
        </record>

        <record id="config_fusionsolar_auth_error_count" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.auth_error_count</field>
            <field name="value">0</field>
        </record>

        <record id="config_fusionsolar_max_auth_errors" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.max_auth_errors</field>
            <field name="value">3</field>
        </record>

        <record id="config_fusionsolar_last_auth_error" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.last_auth_error</field>
            <field name="value"></field>
        </record>

        <record id="config_fusionsolar_last_auth_error_time" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.last_auth_error_time</field>
            <field name="value"></field>
        </record>

        <record id="config_fusionsolar_block_reason" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.block_reason</field>
            <field name="value"></field>
        </record>

        <record id="config_fusionsolar_block_time" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.block_time</field>
            <field name="value"></field>
        </record>

        <record id="config_fusionsolar_last_successful_sync" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.last_successful_sync</field>
            <field name="value"></field>
        </record>

        <record id="config_fusionsolar_reset_time" model="ir.config_parameter">
            <field name="key">huawei.fusionsolar.reset_time</field>
            <field name="value"></field>
        </record>

    </data>
</odoo>